#: include plane.kv

<Battleship>:
    canvas.before:
        Color:
            rgb: (0.9, 0.9, 0.9)
        Rectangle:
            size: self.width, self.height
            pos: self.x, self.y
    rows: 3
    GridLayout:
        cols: 2
        size_hint: 1, 0.05
        Label:
            color: 0,0,0
            text: 'Player1'
            bold: True
        Label:
            color: 0,0,0
            text: 'Player2'
            bold: True
    GridLayout:
        cols: 2
        size_hint: 1, 0.8
        Plane:
            id: player
        Plane:
            id: opponent
    GridLayout:
        cols: 2
        size_hint: 1, 0.05
        TextInput:
            id: gameId
            multiline: False
        Button:
            text: 'Start'
            id: startGameButton
            on_release: root.startButtonClick()
